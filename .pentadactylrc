"Pentadactylrc

loadplugins '\.(js|penta)$'
group user

" Options {{{
" -----------------------------------------------------------------------------

colorscheme kolor
set defsearch=g
set guioptions-=br
set guioptions+=n
set hlfind

" }}}
" Mappings {{{
" -----------------------------------------------------------------------------

map , <Leader>
map <C-Right> :tabmove! +1<CR>
map <C-Left> :tabmove! -1<CR>
map <S-Right> gt
map <S-Left> gT
nmap -builtin <Leader>p :set private!<CR>
nmap -builtin <Leader>, :noh<CR>
nmap -builtin ; :
nmap -builtin : ;
vmap -builtin ; :
vmap -builtin : ;
nmap -builtin <C-S-n> :tabmove! +1<CR>
nmap -builtin <C-S-p> :tabmove! -1<CR>
" Normal mode
nmap <C-a>      <pass>
nmap <C-c>      <pass>
" Insert mode
imap <C-a>      <pass>
imap <C-c>      <pass>

"}}}
" Style {{{
" -----------------------------------------------------------------------------

style -name minitabs chrome://* <<EOM
#TabsToolbar toolbarbutton {
display: none !important;
}
.tabbrowser-tab:not([pinned]) {
max-width: 150px !important;
min-width: 150px !important;
} 
.tabbrowser-tab:not([fadein]) {
max-width: 0px !important;
min-width: 0px !important;
}
EOM

"}}}
