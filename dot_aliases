alias grep='grep --color=auto'
alias vim=nvim

# Alias git to hub
if command -v hub > /dev/null 2>&1; then
  alias git=hub
fi

# Fix sudo + aliases https://askubuntu.com/a/22043
alias sudo='sudo '
alias tf=terraform
alias cz='chezmoi'

# list directories
alias ll='ls -lh'
alias la='ls -lah'

# vim: ft=sh
