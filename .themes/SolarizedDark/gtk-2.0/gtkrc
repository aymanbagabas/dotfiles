#gtk-icon-theme-name = "GNOME"
gtk-theme-name = "SolarizedDark"

gtk_color_scheme = "fg_color:#fdf6e3\nbg_color:#002b36\nbase_color:#073642\ntext_color:#fdf6e3\nselected_bg_color:#586e75\nselected_fg_color:#fdf6e3\ntooltip_bg_color:#002b36\ntooltip_fg_color:#fdf6e3\nlink_color:#268BD2\nvlink_color:#6C71C4"

